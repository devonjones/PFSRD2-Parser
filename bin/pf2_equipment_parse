#!/usr/bin/env python
import sys
import os
from pfsrd2.equipment import parse_equipment, EQUIPMENT_TYPES
from universal.warnings import WarningReporting
from universal.options import exec_main, option_parser


def main():
    valid_types = list(EQUIPMENT_TYPES.keys())
    valid_types_str = ", ".join(valid_types)
    usage = f"usage: %prog [options] --type TYPE [filenames]\nParses equipment ({valid_types_str}) from pfsrd2 html to json and writes them to the specified directory"
    parser = option_parser(usage)
    parser.add_option("--type", dest="equipment_type", type="choice", choices=valid_types, help=f"Equipment type: {valid_types_str}")
    (options, args) = parser.parse_args()

    if not options.equipment_type:
        parser.error(f"--type is required (one of: {valid_types_str})")

    exec_main(options, args, parse_equipment, options.equipment_type)


if __name__ == "__main__":
    sys.exit(main())
