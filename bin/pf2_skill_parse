#!/usr/bin/env python
import sys
import os
from pfsrd2.skill import parse_skill
from universal.warnings import WarningReporting
from universal.options import exec_main, option_parser


def main():
    usage = "usage: %prog [options] [filenames]\nParses skills from pfsrd2 html to json and writes them to the specified directory"
    parser = option_parser(usage)
    (options, args) = parser.parse_args()
    options.subtype = "creature"
    exec_main(options, args, parse_skill, "skills")


if __name__ == "__main__":
    sys.exit(main())
